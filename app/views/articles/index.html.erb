<div class="container">

  <div class="articles">

    <% @articles.each do |article| %>
      <div class="card">
        <%= link_to article_path(article) do %>
        <h5 class="card-header"><%= article.title %></h5>
        <% end %>
        <div class="card-body">
          <p class="card-text"><%= article.content.truncate_words(20, separator: " ") %></p>
        </div>
      </div>
    <% end %>

  </div>

</div>

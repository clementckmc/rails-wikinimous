<div class="container">
  <h1><%= @article.title %></h1>
  <%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fa-solid fa-trash"></i>
  <% end %>
  <%= link_to edit_article_path(@article) do %>
    <i class="fa-solid fa-pen-to-square"></i>
  <% end %>
  <p><%= @article.content %></p>
</div>
